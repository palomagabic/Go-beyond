<!DOCTYPE html>
<html>
  <head>
    <title>GoBeyond</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <a class="navbar-brand" href="<%=root_path%>">Go Beyond</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="<%=welcome_alojamientos_path%>"><i class="fas fa-bed"></i>Alojamientos</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="<%=welcome_vuelos_path%>"><i class="fas fa-plane-departure"></i>Vuelos</a>
          </li>
          <li class="nav-item ">
            <a class="nav-link" href="<%=welcome_paquetes_path%>"><i class="fas fa-suitcase"></i>Paquetes</a>
          </li>
          <li class="nav-item ">
            <a class="nav-link" href="<%=welcome_tours_path%>"><i class="fas fa-map-marked"></i>Tours</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="<%=scrapbooks_path%>"><i class="fas fa-camera-retro"></i>Scrapbooks</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href=""><i class="fas fa-sd-card"></i>Guarda tus recuerdos</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href=""><i class="fas fa-book"></i>Blog</a>
          </li>
        </ul>
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
          <%= link_to edit_user_registration_path %>
          <li class="nav-item">
            <a class="nav-link" href="#">
              <%= link_to('Salir', destroy_user_session_path, :method=>'delete') %>
            </a>
          </li>
          <% else %>
          <li class="nav-item">
            <a class="nav-link" href="<%= new_user_registration_path%>">Registrarse</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="<%= new_user_session_path%>">Ingresar</a>
          </li>
          <% end %>
        </ul>
      </div>
    </nav>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
